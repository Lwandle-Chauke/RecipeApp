<UserControl x:Class="Lwandle_Chauke___ST10380788___PROG6221___POE.AddRecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Lwandle_Chauke___ST10380788___PROG6221___POE"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBox Name="txtRecipeName" PlaceholderText="Enter recipe name" Margin="5"/>
            <TextBox Name="txtNumIngredients" PlaceholderText="Enter number of ingredients" Margin="5"/>
            <!-- Add additional fields for ingredients and steps as needed -->
            <Button Name="btnSaveRecipe" Content="Save Recipe" Width="100" Margin="5" Click="BtnSaveRecipe_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
