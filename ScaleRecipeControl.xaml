<UserControl x:Class="Lwandle_Chauke___ST10380788___PROG6221___POE.ScaleRecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="Auto">
    <Grid>
        <StackPanel>
            <ComboBox Name="cmbRecipes" Margin="5"/>
            <ComboBox Name="cmbScaleFactor" Margin="5">
                <ComboBoxItem Content="Half" />
                <ComboBoxItem Content="Double" />
                <ComboBoxItem Content="Triple" />
            </ComboBox>
            <Button Name="btnScale" Content="Scale Recipe" Width="100" Margin="5" Click="BtnScale_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
